{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Auth-Service",
      "description": "Customer Authentication using Facebook Signup.\n"
    },
    "schemes": [
      "http",
      "https"
    ],
    "securityDefinitions": {
      "Bearer": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    },
    "paths": {
      "/token": {
        "get": {
          "security": [
            {
              "Bearer": []
            }
          ],
          "responses": {
            "200": {
              "description": "Sending Facebook Access Token as a response"
            },
            "404": {
              "description": "Facebook Access Token Not Found for the Customer"
            },
            "403": {
                "description": "Invalid Bearer token"
              },
            "401": {
            "description": "Bearer Token Not Found"
            }
          }
        }
      }
    }
  }